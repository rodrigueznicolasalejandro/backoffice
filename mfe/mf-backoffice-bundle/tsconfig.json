{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declarationDir": "dist",
    "lib": ["ES2021.String", "DOM"],
    "baseUrl": "./",
    "paths": {
      "@ui/*": ["src/ui/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@application/*": ["src/application/*"]
    }
  },
  "files": ["src/link-backoffice-bundle.tsx"],
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test*"],
}
